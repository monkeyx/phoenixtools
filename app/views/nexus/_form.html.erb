<% path = @nexus.new_record? ? configuration_index_path : configuration_path(@nexus) %>
<%= form_for(@nexus, :url => path, :html => {:class => 'form-horizontal'}) do |f| %>
<fieldset>

<% heading("Phoenix Tools Configuration") %>

<div class="control-group">
  <label class="control-label" for="nexus_user">Nexus Username:</label>
  <div class="controls">
  	<%=f.text_field :nexus_user, :class => "input-xlarge", :required => "" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="nexus_password">Nexus Password:</label>
  <div class="controls">
  	<%=f.text_field :nexus_password, :class => "input-xlarge", :required => "" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="affiliation_tag">Affiliation ID:</label>
  <div class="controls">
  	<%=f.number_field :affiliation_id, :class => "input-xlarge", :required => "" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="user_id">XML Access User ID:</label>
  <div class="controls">
  	<%=f.number_field :user_id, :class => "input-xlarge", :required => "" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="xml_code">XML Access Code:</label>
  <div class="controls">
  	<%=f.text_field :xml_code, :class => "input-xlarge", :required => "" %>
    <p class="help-block">You can find these on Nexus in Personal -&gt; XML Access</p>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="configure"></label>
  <div class="controls">
  	<%=f.submit "Configure", :class => "btn btn-primary" %>
  </div>
</div>

</fieldset>
<% end %>